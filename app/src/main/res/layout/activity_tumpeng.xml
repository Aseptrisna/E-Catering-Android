<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    tools:context=".Custommize.Tumpeng">


    <RelativeLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        <include-->
        <!--            android:id="@+id/inc"-->
        <!--            layout="@layout/common_toolbar" />-->

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layoutMain"
            android:gravity="center_vertical"
            tools:ignore="NotSibling">


            <androidx.core.widget.NestedScrollView
                android:padding="5dp"
                android:id="@+id/nestedScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/background02">

                <LinearLayout
                    android:padding="5dp"
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mpembuka"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="3dp"
                        app:cardMaxElevation="2dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Menu Custommize Tumpeng"
                            android:textColorHint="@color/black">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="5dp"
                                android:text="Menu Custommize Tumpeng"
                                android:textStyle="italic"
                                android:textColor="@color/black" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_below="@+id/mJumlahorang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="3dp"
                        app:cardMaxElevation="2dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pilih Jenis Tumpeng"
                            android:textColorHint="@color/black">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="5dp"
                                android:text="Pilih Jenis Tumpeng"
                                android:textStyle="italic"
                                android:textColor="@color/black" />

                            <Spinner
                                android:id="@+id/Spinnerjenis"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="12dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_below="@+id/mCardJumlahorang"
                        android:id="@+id/mwarna"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="3dp"
                        app:cardMaxElevation="2dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pilih warna kotak"
                            android:textColorHint="@color/black">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="5dp"
                                android:text="Pilih Isiian Tumpeng"
                                android:textStyle="italic"
                                android:textColor="@color/black" />

                            <Spinner
                                android:gravity="left"
                                android:id="@+id/Misian"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:textStyle="italic"
                                android:textColor="@color/black"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_below="@+id/mJumlahorang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="3dp"
                        app:cardMaxElevation="2dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Pilih Jenis Tumpeng"
                            android:textColorHint="@color/black">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="5dp"
                                android:text="Pilih Warna Tumpeng"
                                android:textStyle="italic"
                                android:textColor="@color/black" />

                            <Spinner
                                android:id="@+id/SpinnerWarna"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="12dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:layout_alignParentBottom="true"
                        android:id="@+id/Proses"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_ui"
                        android:text="Submit" />

                    <androidx.cardview.widget.CardView
                        android:layout_below="@+id/isiian"
                        android:id="@+id/mhasil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="3dp"
                        app:cardMaxElevation="2dp"
                        app:cardUseCompatPadding="true"
                        app:contentPadding="10dp"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hasil"
                            android:textColorHint="@color/black">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/listCustom"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <!--                            <TextView-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="match_parent"-->
                            <!--                                android:paddingLeft="5dp"-->
                            <!--                                android:text="HASIL"-->

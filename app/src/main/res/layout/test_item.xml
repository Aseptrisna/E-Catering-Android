<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="180dp"
    android:layout_height="200dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    android:orientation="horizontal"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/gambarmenu"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100.0dp"
            android:src="@drawable/itemsatu" />

        <LinearLayout android:id="@+id/layout_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.8">
                <TextView android:layout_width="wrap_content"
                    android:id="@+id/nama_menu"
                    android:layout_height="wrap_content"
                    android:text="Item Name "
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    tools:ignore="InvalidId" />
                <!--                <TextView android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    android:text="Item descriptions"-->
                <!--                    android:textSize="12dp"/>-->
                <TextView android:layout_width="wrap_content"
                    android:id="@+id/harga_menu"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Rs. 8,999"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textColor="@color/bg_screen10"/>
            </LinearLayout>
<!--            <ImageView android:id="@+id/ic_wishlist"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_weight="0.3"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                card_view:srcCompat="@drawable/ic_add_menu"/>-->
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
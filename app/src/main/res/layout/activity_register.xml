<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_70"
    tools:context=".Menu.Register"
    android:id="@+id/Myregister">

    <FrameLayout
        android:id="@+id/formregister"
        android:background="@color/c_white"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/bg_screen10"
                android:textSize="30dp"
                android:text=" Menu Register"/>

            <!--        <TextView-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:gravity="center"-->
            <!--            android:textSize="25dp"-->
            <!--            android:textColor="@color/colorAccent"-->
            <!--            android:text="AplikasiBengkel.com"/>-->


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/namelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="20dp"
                android:hint=" Nama Anda"
                android:textColorHint="@color/bg_screen10">


                <EditText
                    android:id="@+id/Nama_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bg_screen10"
                    android:drawablePadding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/bg_screen10"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/userlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:hint=" Email Anda"
                android:textColorHint="@color/bg_screen10">

                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/Email_Register"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bg_screen10"
                    android:drawablePadding="5dp"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/bg_screen10"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:hint="Password"
                android:textColorHint="@color/bg_screen10">

                <EditText
                    android:id="@+id/Register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bg_screen10"
                    android:drawablePadding="5dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/bg_screen10"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/RegisternBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Register"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/c_white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sudahpunyaakun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:padding="5dp"
                android:text="Sudah Punya Akun?"
                android:textColor="@color/bg_screen10" />


        </LinearLayout>

    </FrameLayout>

</LinearLayout>